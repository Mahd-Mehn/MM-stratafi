{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", "build/**", "apps/frontend/.next/**"] },
    "dev": { "cache": false },
    "lint": { "dependsOn": ["^lint"] },
    "test": { "outputs": ["coverage/**"], "dependsOn": ["^test"] }
  }
}
